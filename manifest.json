{
  "manifest_version": 4,
  "name": "Movie Time",
  "version": "1.2.0",
  "description": "Watch Netflix with peer-to-peer sync and videochat",
  "permissions": [
    "storage",
    "scripting",
    "activeTab",
    "clipboardRead"
  ],
  "host_permissions": ["*://*.netflix.com/*"],

  "background": {
    "service_worker": "background.js",
    "type": "module"
  },

  "action": {
    "default_popup": "src/popup/popup.html"
  },

  "content_scripts": [
    {
      "matches": ["*://*.netflix.com/*", "file:///*video-player.html"],
      "js": ["content.js"]
    }
  ],
  
  "web_accessible_resources": [
    {
      "resources": ["overlayBridge.js"],
      "matches": ["*://*.netflix.com/*"]
    }
  ]
}
