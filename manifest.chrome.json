{
  "manifest_version": 3,
  "name": "Movie Time",
  "short_name": "Movie Time",
  "version": "1.3.4",
  "description": "[FREE] Watch Netflix together with real-time sync and built-in video chat",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage",
    "tabs",
    "clipboardRead"
  ],
  "host_permissions": [
    "*://*.netflix.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_title": "Movie Time"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.netflix.com/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "overlayBridge.js"
      ],
      "matches": [
        "*://*.netflix.com/*"
      ]
    }
  ]
}