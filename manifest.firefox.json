{
  "manifest_version": 2,
  "name": "Movie Time",
  "short_name": "Movie Time",
  "version": "1.3.2",
  "description": "[FREE] Watch Netflix together with real-time sync and built-in video chat",

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "permissions": [
    "storage",
    "tabs",
    "clipboardRead",
    "*://*.netflix.com/*"
  ],

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "browser_action": {
    "default_popup": "src/popup/popup.html",
    "default_title": "Movie Time"
  },

  "content_scripts": [
    {
      "matches": ["*://*.netflix.com/*"],
      "js": ["content.js"]
    }
  ],

  "web_accessible_resources": [
    "overlayBridge.js"
  ],

  "browser_specific_settings": {
    "gecko": {
      "id": "movie-time@andreasantarsiero.com"
    }
  }
}
